<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.paramv.sunbreak.MainActivity"
    android:padding="0dp"

    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">
        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/weather_dialog_time"
            android:textColor="@color/colorDarkGrey"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/weather_dialog_date"
            android:textColor="@color/colorCloudGrey"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cloud_cover_pct_label"
                android:textColor="@color/colorDarkGrey"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/temperature_label"
                android:textColor="@color/colorOrangeAccent"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
